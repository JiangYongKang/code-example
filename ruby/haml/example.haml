%html{ :lang => "en" }
  %head
    %title haml example
  %body
    %div{ :class => "panel" }
      %h1{ :class => "title" } sign in
      %div{ :class => "input-group" }
        %div{ :class => "input-box" }
          %input{ :name => "email", :max_length => "64", :placeholder => "email", :class => "input" }
        %div{ :class => "input-box" }
          %input{ :name => "password", :max_length => "64", :placeholder => "password", :class => "input", :type => "password" }
      %button{ :class => "button" } sign in
      %div{ :class => "footer" } 
        no account?
        %a{ :class => "clickable" } sign up
        %a{ :class => "clickable right" } sign up

:css
  .panel {
    background-color: #F3F5F7;
    border-radius: 2px;
    padding: 2rem;
    position: relative;
    width: 26.5rem;
    height: 300px;
    max-width: 100%;
    font-family: Helvetica;
    font-size: 1.167rem;
    box-sizing: border-box;
    border-color: #FFFFFF;
    margin: auto;
  }

  .input-box {
    margin-bottom: 1rem;
  }

  .input {
    padding: 10px;
    width: 100%;
    border: 1px solid #E9E9E9;
    border-radius: 2px;
    box-sizing: border-box;
    background-color: #FAFFBD;
  }

  .button {
    width: 100%;
    height: 3.334rem;
    border-radius: 2px;
    padding: .5rem 1.3rem;
    color: #FFFFFF;
    background-color: #007fff;
    outline: none;
    cursor: pointer;
    box-sizing: border-box;
    margin: 0;
  }

  .footer {
    margin: 1.4rem 0 0;
    color: #8B9196;
  }

  .clickable {
    color: #007FFF;
    cursor: pointer;
  }

  .right {
    float: right;
  }

  h1 {
    font-size: 1.5rem;
    margin: 0 0 2rem;
    display: block;
  }
